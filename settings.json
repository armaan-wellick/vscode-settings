{
    "php.validate.executablePath": "/usr/bin/php",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<esc>"]
        }
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-c>": false,
        "<C-x>": false,
        "<C-v>": false,
        "<C-y>": false,
        "<C-w>": false,
        "<C-d>": false
    },
    "editor.mouseWheelZoom": true,
    "editor.wordWrap": "on",
    "editor.fontLigatures": true,
    "editor.suggestSelection": "first",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.editor.enablePreview": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
    },
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
        "editor.formatOnSave": true,
        // "editor.fontFamily": "'Iosevka'",
        // "editor.fontSize": 25,
        // "editor.lineHeight": 40
    },
    "terminal.integrated.fontSize": 17,
    "editor.renderWhitespace": "none",
    "diffEditor.wordWrap": "on",
    "prettier.tabWidth": 2,
    "editor.guides.bracketPairs": "active",
    "files.watcherExclude": {
        "*/.git/objects/*": true,
        "*/node_modules/*": true
    },
    "tailwindCSS.includeLanguages": {
        "typescript": "javascript",
        "typescriptreact": "javascript"  
    },
    "editor.quickSuggestions": {
        "strings": true
    },
    "tailwindCSS.experimental.classRegex": [
        "tw`([^`]*)", 
        "tw\\.[^`]+`([^`]*)`", 
        "tw\\(.?\\).?`([^`]*)" 
    ],
    "editor.fontFamily": "'Menlo', 'Fira Code iScript', 'Monolisa', 'Cascadia Code', 'Hack', 'Roboto Mono', 'Noto Mono', 'IBM Plex Mono', 'Operator Mono', 'Fira Code', 'Iosevka', 'Fira Code', 'JetBrains Mono', 'Ubuntu Mono', 'Dank Mono', 'Monospace'",
    "window.menuBarVisibility": "toggle",
    "workbench.colorCustomizations": {
        "[Flate]": {
            "editor.lineHighlightBackground": "#000000",
            "editorIndentGuide.background": "#2b2b2b"
        },
    },

    "editor.smoothScrolling": true,
    "editor.fontSize": 19, // For normal use case
    // "editor.fontSize": 23, // For cascadia code, fira code & operator mono
    // "editor.fontSize": 25, // For iosevka
    // "editor.fontSize": 30, // For ubuntu mono
    // "editor.lineHeight": 35, // For normal use case
    // "editor.lineHeight": 40, // For iosevka 
    // "editor.lineHeight": 43, // For ubuntu mono 
    "vim.smartRelativeLine": true,
    "terminal.integrated.showExitAlert": false,
    "workbench.iconTheme": "material-icon-theme",
    "vsicons.dontShowNewVersionMessage": true,
    "editor.cursorStyle": "block",
    "editor.cursorSmoothCaretAnimation": true,
    "terminal.integrated.fontFamily": "'Menlo'"
}

